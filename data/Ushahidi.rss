    {
    menubar = r_Ushahidi_menubar;
    cba = R_AVKON_SOFTKEYS_OPTIONS_EXIT;
    }


RESOURCE MENU_BAR r_Ushahidi_menubar
    {
        titles =
        {
            MENU_TITLE
            {
                menu_pane = r_Ushahidi_menu;
            }
